@model List<FileServer.Models.FileModel>

@{ ViewData["Title"] = "Позиции"; }

<div class="container-xxl m-1">
    <div class="table-wrapper">
        <div class="table-title m-3">
            Файлы
            <div class="col-sm-6 mt-2">
                <div class="row">
                    <a asp-action="Create" class="btn btn-primary">
                        <span>Добавить</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Владелец
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.UserModel.Login)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Редактирование</a>
                        <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-info">Скачать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удаление</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>