@model FileServer.Models.AccessModel

@{ ViewData["Title"] = "Создание"; }

<div class="container">
    <h1>Добавление</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserModelId" class="control-label"></label>
                    <select asp-for="UserModelId" class="form-control">
                        @foreach (var item in ViewBag.Employee)
                        {
                            <option value="@item.Id">@item.Login</option>
                        }
                    </select>
                    <span asp-validation-for="UserModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FileModelId" class="control-label"></label>
                    <select asp-for="FileModelId" class="form-control">
                        @foreach (var item in ViewBag.Files)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="FileModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccessLevel" class="control-label"></label>
                    <select asp-for="AccessLevel" class="form-control">
                        @foreach (var item in ViewBag.Radio)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="AccessLevel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
